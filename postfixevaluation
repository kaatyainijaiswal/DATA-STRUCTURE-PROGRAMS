
#include <stdio.h> //standard input output header file//
#include <stdlib.h>
#include<string.h>
#include<ctype.h>
#include<math.h>
#define max 500
 
int top =-1;
char stack[50];
 
void push(int x)//push function//
{
    stack[++top]=x;
}
 
int pop()
{
    return stack[top--];
}
int main()
{
    char exp[50],*e;
    int a,b,c,num;
    printf("\n Enter the postfix expression : \n ");
    scanf("%s",exp);
    e=exp;
    while(*e!=0)
    {
        if(isdigit(*e))
        {
            num =(*e)-48;
            push(num);
        }
        else
        {
            a=pop();
            b=pop();
            switch(*e)
            {
                case'+': c=b+a;
                break;
                case'-': c=b-a;
                break;
                case'*':c=b*a;
                break;
                case'/':c=b/a;
                break;
                case'^':c=pow(b,a);
                break;
                default: printf("Invalid operator , Please try again!\n");
                break;
 
            }
            push(c);
 
        }
        e++;
    }
    printf("Final answer %d", pop());
    return 0;
}
